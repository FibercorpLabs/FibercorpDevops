#!/bin/bash

pids=""
host=`hostname -s`

for d in `lsscsi | grep XtremIO | awk '{print $6}'`;
do
    echo Unmapping $d on $host
    ddpt if=/dev/zero of=$d bpt=8192 oflag=pt,trim &
    pids="${pids} $!"
done

echo Waiting for $host processes $pids to complete...
wait $pids
echo Processes $pids completed on $host
